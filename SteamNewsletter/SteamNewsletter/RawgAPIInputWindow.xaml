<Window x:Class="SteamNewsletter.RawgAPIInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter RAWG API Key" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <!-- ChatGPT Prompt: Cleaned version without column layout -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter your RAWG API Key:" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBox x:Name="ApiKeyTextBox"
                 Grid.Row="1"
                 Height="30"
                 FontSize="14"
                 Margin="0,0,0,10" TextChanged="ApiKeyTextBox_TextChanged"/>

 

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="HelpButton"
                    Content="?"
                    Width="20" Height="20"
                    FontSize="10"
                    Margin="0,0,10,0"
                    ToolTip="Help with creating a RAWG account"
                    Background="IndianRed"
                    Foreground="Black"
                    BorderBrush="Black"
                    BorderThickness="1.5" Click="HelpButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="APIKeyButton"
                    Content="Get API Key"
                    Margin="0,0,10,0"
                    Padding="10,5"
                    ToolTip="Click to open RAWG API Key creation page" 
                    Click="APIKeyButton_Click"/>
            <Button Content="Cancel" 
                    Margin="0,0,10,0"
                    Padding="10,5"
                    IsCancel="True"/>
            <Button x:Name="ButtonSave"
                    Content="Save" 
                    Padding="10,5"
                    IsDefault="True" 
                    Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
