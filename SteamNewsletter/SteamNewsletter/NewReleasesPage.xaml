<Page x:Class="SteamNewsletter.NewReleasesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SteamNewsletter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Up_nCominPage">

    <Grid Background="White" x:Name="GridMain">

        <Label x:Name="LabelLoading" Content="Loading..." FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" Visibility="Visible"/>

        <ListView x:Name="ListViewReleases" Visibility="Hidden">
            <ListView.View>
                <GridView x:Name="GridViewReleases">
                    <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Release Date" Width="120" DisplayMemberBinding="{Binding Released}"/>
                    <GridViewColumn Header="Developer" Width="100" DisplayMemberBinding="{Binding Developer}"/>
                    <GridViewColumn Header="Rating" Width="100" DisplayMemberBinding="{Binding Rating}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
