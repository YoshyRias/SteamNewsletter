<Window x:Class="SteamNewsletter.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Info"
        Height="400" Width="600"
        ResizeMode="CanResize"
        MinHeight="300" MinWidth="400"
        Background="White">

    <!--ChatGPT Prompt: Design me a window for specific game details.-->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="GameTitle" 
                   FontSize="20" FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <Image x:Name="GameImage" Height="auto" Stretch="Uniform" Margin="0,0,0,10" Source="{Binding BackgroundImage}"/>

                <TextBlock x:Name="GameDescription" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="GamePlatforms"
                           FontSize="18"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="GameGenres"
                           FontWeight="Bold"
                           FontSize="18"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2"
                x:Name="OpenWebsiteButton"
                Content="Open Official Website"
                HorizontalAlignment="Right"
                Width="180"
                Margin="0,10,0,0" 
                Click="OpenWebsiteButton_Click"/>
    </Grid>
</Window>
