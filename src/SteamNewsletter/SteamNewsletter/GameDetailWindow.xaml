<Window x:Class="SteamNewsletter.GameDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Info"
        Height="500" Width="700"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="500"
        Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Image + Details -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>

        <TextBlock x:Name="GameTitle"
               FontSize="20" FontWeight="Bold"
               TextWrapping="Wrap"
               Margin="0,0,0,10" />

        <!-- Main content area with two rows: image and text -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Image x:Name="GameImage"
               Grid.Row="0"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,0,0,10"
               Source="{Binding BackgroundImage}" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,0,10">
                    <TextBlock x:Name="GamePlatforms"
                           FontSize="16"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                    <TextBlock x:Name="GameGenres"
                           FontWeight="Bold"
                           FontSize="16"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                    <TextBlock x:Name="GameDescription"
                           TextWrapping="Wrap"
                               FontSize="14"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Button Grid.Row="2"
            x:Name="OpenWebsiteButton"
            Content="Open Official Website"
            HorizontalAlignment="Right"
            Width="180"
            Margin="0,10,0,0"
            Click="OpenWebsiteButton_Click"/>
    </Grid>

</Window>
